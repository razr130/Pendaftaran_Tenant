@model IEnumerable<E_Commerce_MultiTenant.Models.Order>

@{
    ViewBag.Title = "GetAllOrder";
}
@{
    Layout = "~/Views/Shared/_LayoutNoWhiteBar.cshtml";
}


<div class="container" style="margin-top:5%">
    <h2>GetAllOrder</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.no_order)
            </th>
            <th>
                Nama Customer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tgl_order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status_bayar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tgl_konfirmasi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total_harga)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dikirim)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.no_order)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nama_customer)
                </td>
                <td>
                    @item.tgl_order
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status_bayar)
                </td>
                @if (item.tgl_konfirmasi == null)
                {
                    <td>-</td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.tgl_konfirmasi)
                    </td>
                }
                @if (item.total_harga == 0)
                {
                    <td>-</td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.total_harga)
                    </td>
                }

                <td>
                    @Html.DisplayFor(modelItem => item.dikirim)
                </td>
                <td>
                    <button class="btn btn-primary btn-xs" onclick="location.href='@Url.Action("DetailOrderKaryawan","ShoppingCart")/?id=@item.no_order'">Lihat Detail</button>
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    </table>
</div>