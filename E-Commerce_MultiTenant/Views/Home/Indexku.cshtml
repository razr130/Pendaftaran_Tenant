@model IEnumerable<E_Commerce_MultiTenant.Models.DataCarausel>

@{
    ViewBag.Title = "Home Page";
}
<div style="margin-top:0px">
    <div class="content-space-four">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />


    </div>
    <div class="carousel slide" id="mycarousel" data-ride="carousel" style="margin-top:-15px;">
        <ol class="carousel-indicators">
            <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
            <li data-target="#mycarousel" data-slide-to="1"></li>
            <li data-target="#mycarousel" data-slide-to="2"></li>
            <li data-target="#mycarousel" data-slide-to="3"></li>

        </ol>
        <div class="carousel-inner">
            @foreach (var gambar in Model.Select((value, i) => new { i, value }))
            {
                if (gambar.i == 0)
                {
                    <div class="item active">
                        <img src="http://localhost:52494/Content/Images/@gambar.value.gambar" width="1600" height="850" />
                        <div class="carousel-caption">
                            <p>This week's Sale</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="item ">
                        <img src="http://localhost:52494/Content/Images/@gambar.value.gambar" width="1600" height="850" />
                        <div class="carousel-caption">
                            <p>This week's Sale</p>
                        </div>
                    </div>
                }
            }
           
        </div>
        <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
