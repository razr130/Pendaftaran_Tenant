@model Pendaftaran_Tenant.Models.Karyawan

@{
    ViewBag.Title = "EditKaryawan";
}


<div class="row">
    <br />
    <div class="col-md-12 col-xs-12" style="margin-left:27%">
        <div class="thumbnail clearfix text-center" style="max-width:500px;width:100%">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <h4>Karyawan</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id_karyawan)
                <table style="border:0 solid;float:none;margin:0 auto">
                    <tr><th style="text-align:center">Nama Karyawan</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            @Html.EditorFor(model => model.nama_karyawan, new { htmlAttributes = new { @class = "form-control text-center" } })
                            @Html.ValidationMessageFor(model => model.nama_karyawan, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Email Karyawan</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            @Html.EditorFor(model => model.email_karyawan, new { htmlAttributes = new { @class = "form-control text-center" } })
                            @Html.ValidationMessageFor(model => model.email_karyawan, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Password</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control text-center" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Tempat Lahir</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            @Html.EditorFor(model => model.tempat_lahir, new { htmlAttributes = new { @class = "form-control text-center" } })
                            @Html.ValidationMessageFor(model => model.tempat_lahir, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Tanggal Lahir</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <div class="dropdown" style="display:inherit;padding-right:10px">
                                <button class="btn btn-default dropdown-toggle" value="@Model.tanggal" style="width:60px" type="button" data-toggle="dropdown" name="tanggal" id="btntanggal">
                                    @Model.tanggal
                                    <span class="caret"></span>
                                </button>
                                <input value="@Model.tanggal" type="hidden" id="hiddentanggal" name="tanggal" />
                                <ul class="dropdown-menu scrollable-menu" role="menu" id="dropdowntanggal">
                                    @for (int tgl = 1; tgl <= 31; tgl++)
                                    {
                                        <li><a href="#/">@tgl.ToString()</a></li>
                                    }
                                </ul>
                            </div>
                            <div class="dropdown" style="display:inherit">
                                <button class="btn btn-default dropdown-toggle" value="@Model.bulan" style="width:100px" type="button" data-toggle="dropdown" name="bulan" id="btnbulan">
                                    @Model.bulan
                                    <span class="caret"></span>
                                </button>
                                <input value="@Model.bulan" type="hidden" id="hiddenbulan" name="bulan" />
                                <ul class="dropdown-menu scrollable-menu" role="menu" id="dropdownbulan">

                                    <li><a href="#/">Januari</a></li>
                                    <li><a href="#/">Februari</a></li>
                                    <li><a href="#/">Maret</a></li>
                                    <li><a href="#/">April</a></li>
                                    <li><a href="#/">Mei</a></li>
                                    <li><a href="#/">Juni</a></li>
                                    <li><a href="#/">Juli</a></li>
                                    <li><a href="#/">Agustus</a></li>
                                    <li><a href="#/">September</a></li>
                                    <li><a href="#/">Oktober</a></li>
                                    <li><a href="#/">November</a></li>
                                    <li><a href="#/">Desember</a></li>

                                </ul>
                            </div>
                            <div class="dropdown" style="display:inherit;padding-left:10px">
                                <button class="btn btn-default dropdown-toggle" value="@Model.tahun" style="width:80px" type="button" data-toggle="dropdown" name="tahun" id="btntahun">
                                    @Model.tahun
                                    <span class="caret"></span>
                                </button>
                                <input value="@Model.tahun" type="hidden" id="hiddentahun" name="tahun" />
                                <ul class="dropdown-menu scrollable-menu" role="menu" id="dropdowntahun">
                                    @for (int tgl = 1960; tgl <= 2018; tgl++)
                                    {
                                        <li><a href="#/">@tgl.ToString()</a></li>
                                    }
                                </ul>
                            </div>


                        </td>
                    </tr>

                    <tr><th style="text-align:center">No Telepon</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            @Html.EditorFor(model => model.no_telp, new { htmlAttributes = new { @class = "form-control text-center" } })
                            @Html.ValidationMessageFor(model => model.no_telp, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr><th style="text-align:center">Alamat</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            @Html.EditorFor(model => model.alamat, new { htmlAttributes = new { @class = "form-control text-center" } })
                            @Html.ValidationMessageFor(model => model.alamat, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Jenis Kelamin</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" value="@Model.jns_kelamin" type="button" data-toggle="dropdown" name="jns_kelamin" id="btnjk">
                                    @Model.jns_kelamin
                                    <span class="caret"></span>
                                </button>
                                <input value="@Model.jns_kelamin" type="hidden" id="hiddenjk" name="jns_kelamin" />
                                <ul class="dropdown-menu scrollable-menu" role="menu" id="dropdownjk">

                                    <li><a href="#/">L</a></li>
                                    <li><a href="#/">P</a></li>

                                </ul>
                            </div>
                        </td>
                    </tr>

                </table>
                        <input type="submit" value="Save" class="btn btn-success" />
                        <br />
                        <br />
                        <script type="text/javascript">
                    $(function () {

                        $("#dropdowntanggal").on('click', 'li a', function () {
                            $("#btntanggal").text($(this).text());
                            $("#btntanggal").val($(this).text());
                            $("#hiddentanggal").val($(this).text());

                        });
                        $("#dropdownbulan").on('click', 'li a', function () {
                            $("#btnbulan").text($(this).text());
                            $("#btnbulan").val($(this).text());
                            $("#hiddenbulan").val($(this).text());

                        });
                        $("#dropdowntahun").on('click', 'li a', function () {
                            $("#btntahun").text($(this).text());
                            $("#btntahun").val($(this).text());
                            $("#hiddentahun").val($(this).text());

                        });
                        $("#dropdownjk").on('click', 'li a', function () {
                            $("#btnjk").text($(this).text());
                            $("#btnjk").val($(this).text());
                            $("#hiddenjk").val($(this).text());

                        });
                    });
                        </script>

            }
        </div>
    </div>
</div>

