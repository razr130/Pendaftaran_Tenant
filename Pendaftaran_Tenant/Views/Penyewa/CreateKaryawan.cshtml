

@{
    ViewBag.Title = "CreateKaryawan";
}
@section navwizard {


    <link rel="stylesheet" href="~/Content/bootstrap-nav-wizard.css" type="text/css" />

}
<div class="text-center">
    <ul class="nav nav-wizard" style="display:inline-block">
        <li><a style="color:#47a447">Design Website</a></li>
        <li><a style="color:#47a447">Gambar Homepage</a></li>
        <li class="active"><a>Data Produk, Bahan, dan Jenis Sablon</a></li>
        <li><a style="color:#47a447">Data Harga</a></li>

    </ul>
</div>
<br />

<br />
<div class="row">
    @Html.ActionLink("Lanjut ke penambahan produk >>", "CreateProduk", "Penyewa", null, new { onclick = "return confirm('Anda yakin sudah selesai mengisi data karyawan dan hendak melanjutkan ke pengisian produk?')", @class = "btn btn-success btn-sm", @style = "float:right;margin-right:40px" })
</div>
<br />
<div class="row">
    <div class="col-md-6 col-xs-6">
        <div class="thumbnail clearfix text-center" style="max-width:500px;width:100%">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <h4>Karyawan</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table style="border:0 solid;float:none;margin:0 auto">
                    <tr><th style="text-align:center">Nama Karyawan</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <input type="text" class="form-control" id="namabahan" name="nama_karyawan" />
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Email Karyawan</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <input type="text" class="form-control" id="namabahan" name="email_karyawan" />
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Password</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <input type="text" class="form-control" id="namabahan" name="password" />
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Tempat Lahir</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <input type="text" class="form-control" id="namabahan" name="tempat_lahir" />
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Tanggal Lahir</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" name="tanggal">
                                    Tgl
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    @for (int tgl = 1; tgl <= 31; tgl++)
                                    {
                                        <li><a href="#">@tgl.ToString()</a></li>
                                    }
                                </ul>
                                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" name="bulan">
                                    Bulan
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">

                                    <li><a href="#">Januari</a></li>
                                    <li><a href="#">Februari</a></li>
                                    <li><a href="#">Maret</a></li>
                                    <li><a href="#">April</a></li>
                                    <li><a href="#">Mei</a></li>
                                    <li><a href="#">Juni</a></li>
                                    <li><a href="#">Juli</a></li>
                                    <li><a href="#">Agustus</a></li>
                                    <li><a href="#">September</a></li>
                                    <li><a href="#">Oktober</a></li>
                                    <li><a href="#">November</a></li>
                                    <li><a href="#">Desember</a></li>

                                </ul>
                                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" name="tahun">
                                    Tahun
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    @for (int tgl = 1960; tgl <= 2018; tgl++)
                                    {
                                        <li><a href="#">@tgl.ToString()</a></li>
                                    }
                                </ul>
                            </div>


                        </td>
                    </tr>
                    <tr><th style="text-align:center">No Telepon</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <input type="text" class="form-control" id="namabahan" name="no_telp" />
                        </td>
                    </tr>

                    <tr><th style="text-align:center">Alamat</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <input type="text" class="form-control" id="namabahan" name="alamat" />
                        </td>
                    </tr>
                    <tr><th style="text-align:center">Jenis Kelamin</th></tr>
                    <tr>
                        <td style="padding-bottom:10px">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" name="jns_kelamin">
                                    Jenis Kelamin
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">

                                    <li><a href="#">L</a></li>
                                    <li><a href="#">P</a></li>

                                </ul>
                            </div>
                        </td>
                    </tr>

                </table>

                <input type="submit" value="Create" class="btn btn-success" />
                <br />
                <br />

            }
        </div>
    </div>
</div>