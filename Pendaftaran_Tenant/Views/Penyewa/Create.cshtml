@model Pendaftaran_Tenant.Penyewa

@{
    ViewBag.Title = "Create";
}
@{
    Layout = "~/Views/Shared/_LayoutNoBar.cshtml";
}

<div class="col-md-12 col-xs-12" style="margin-left:35%">
    <br />
    <div class="thumbnail clearfix text-center" style="max-width:300px;width:100%">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2 class="text-center" style="color:#47a447">Daftar</h2>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <table style="border:0 solid;float:none;margin:0 auto">
                <tr><th style="text-align:center"> <label>Nama Perusahaan</label></th></tr>
                <tr>
                    <td style="text-align:center">
                        @Html.EditorFor(model => model.nama_perusahaan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nama_perusahaan, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr><th style="text-align:center"><label>E-Mail</label></th></tr>
                <tr>
                    <td style="text-align:center">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr><th style="text-align:center"><label>Password</label></th></tr>
                <tr>
                    <td style="text-align:center">
                        @Html.PasswordFor(model => model.password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr><th style="text-align:center"> <label>Alamat</label></th></tr>
                <tr>
                    <td style="text-align:center">
                        @Html.EditorFor(model => model.alamat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.alamat, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr><th style="text-align:center"><label>Nomor Telephon</label></th></tr>
                <tr>
                    <td style="text-align:center">
                        @Html.EditorFor(model => model.no_telp, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.no_telp, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>


            <br />
            <div>

                <input type="submit" value="Daftar" class="btn btn-success" />
                <br />
                <p> <a onclick="location.href='@Url.Action("Index", "Home")'" class="btn btn-warning btn-xs" style="margin-top:10px">Kembali ke beranda</a></p>
            </div>
            <br />
            <br />

        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
