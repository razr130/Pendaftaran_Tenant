@model Pendaftaran_Tenant.Models.Bahan

@{
    ViewBag.Title = "EditBahan";
}

<br />
<div class="col-md-12 col-xs-12" style="margin-left:32%">
    <div class="thumbnail clearfix text-center" style="max-width:400px;width:100%">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <h4>Edit Bahan @Session["nama_bahan"].ToString()</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_bahan)
            <table style="border:0 solid;float:none;margin:0 auto">
                <tr>
                    <th style="text-align:center"> Nama bahan baru</th>
                </tr>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.nama_bahan, new { htmlAttributes = new { @class = "form-control",  id = "namabahan", name = "namabahan" } })
                        @Html.ValidationMessageFor(model => model.nama_bahan, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
            <br />
                <input type="submit" value="Save" class="btn btn-success" />
            <br />
            <br />
        }
    </div>
</div>
