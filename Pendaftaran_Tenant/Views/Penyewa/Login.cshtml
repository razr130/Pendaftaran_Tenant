@using Pendaftaran_Tenant.Models
@model Penyewa
@{
    ViewBag.Title = "Log in";
}

<h2 style="color:#47a447" class="text-center">@ViewBag.Title</h2>
<hr  />

@Html.Raw(TempData["Pesan"])
<div class="row text-center">
    
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Penyewa", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group text-center">
                <div class="col-md-6 col-md-offset-3">
                    @Html.LabelFor(m => m.email)

                    @Html.TextBoxFor(m => m.email, new { @class = "form-control", @style = "margin:0" })
                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                    </div>
                </div>
            <div class="form-group text-center">
                <div class="col-md-6 col-md-offset-3">
                    @Html.LabelFor(m => m.password)

                    @Html.PasswordFor(m => m.password, new { @class = "form-control", @style = "margin:0" })
                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>

                }
</section>
    </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}